$(document).ready(function() {
    $.ajax({
        url: 'http://localhost:3000/group/get-groups',
        type: 'GET',
        success: function(grupos) {
            console.log(grupos);
            var select = $('#grupoNotificacion');
            Object.entries(grupos).forEach(function([key, grupo]) {
                var option = $('<option>').text(grupo.groupName).val(key);
                select.append(option);
            });
        },
        error: function(error) {
            console.error('Error: ', error);
        }
    });
});
</script>
<script>
$(document).ready(function loadGroups() {
    $.ajax({
        url: 'http://localhost:3000/notification/get-all-notifications',
        method: 'GET',
        success: function (response) {
            var groupTableBody = $('#groupTableBody');
            groupTableBody.empty();
            for (var i = 0; i < response.length; i++) {
                var res = response[i];
                
                console.log(res.noti.mensaje) // imprime el mensaje de la notificación

                var row = $('<tr>');
                row.append($('<td>').text(res.groupName)); // muestra el nombre del grupo
                row.append($('<td>').text(res.noti.createdAt)); // muestra el nombre del grupo
                row.append($('<td>').text(res.noti.titulo)); // muestra el nombre del grupo
                row.append($('<td>').text(res.noti.mensaje)); // muestra el mensaje de la notificación

                // Crea un botón para cada fila
                var deleteButton = $('<button>').text('Borrar').addClass('btn btn-danger deleteButton');
                row.append($('<td>').append(deleteButton));

                groupTableBody.append(row);
            }

            // Asigna un controlador de eventos a los botones de borrado
            $('.deleteButton').click(function () {
                var groupToDelete = $(this).closest('tr').children('td:first').text();
                deleteNotification(res.noti.createdAt, res.noti.createdAt);
            });
        },
        error: function (xhr, status, error) {
            console.error(error);
        }
    })
});


  // Función para hacer la solicitud POST a tu API
  function deleteNotification(createdAt, groupName) {
    $.ajax({
      method: 'POST',
      url: 'http://localhost:3000/notification/delete-notification',
      data: {
        createdAt: createdAt,
        groupName: groupName
      },
      success: function(response) {
        alert('La notificación se ha borrado exitosamente');
        location.reload(); // Recargar la página para mostrar los cambios
      },
      error: function(xhr, status, error) {
        console.error(error);
      }
    });
  }
